{
    "manifest_version": 2,

    "name": "Instagrator",
    "description": "Integrate Instagram tags into Facebook",
    "version": "0.2",
    "options_page": "options.html",

    "background": {
        "scripts":  ["background.js"],
        "persistent": false
    },

    "content_scripts": [
        {
            "matches": ["*://*.facebook.com/*"],
            "js": ["jquery.js", "contentscript.js"]
        }
    ],

    "page_action": {
        "default_icon": {
            "19": "icon19.png"
        },
        "default_title": "Instagrator",
        "default_popup": "popup.html"
    },

    "permissions": [
        "*://*.facebook.com/*",
        "webNavigation"
    ]
}
